{% block body %} 
<body class = "bg-white">
    <div class ="container">
        <h2 class ="mt-4 text-dark">Mon adresse email</h2>
        <div class = "d-flex justify-content-center">
            <form>
                <div class="d-flex justify-content-center mt-5">
                    <input id="email" type="email" placeholder="E-mail" class="pl-3 pr-3 h-50">
                </div>
                <p class="explication" class="mb-5">
