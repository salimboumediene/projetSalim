        vars[key] = value;
        });
        return vars;
    }

    var type = getUrlVars()['type'];
        
    function valider() {
        if (!$("input").val()){
            alert("Veullez remplir les champs vides")
        } else {
            window.location='pswdForm.html?type=' + type + '&email=' + document.getElementById("email").value;
        }
